
<div class="card text-center">
  <div class="card-header">
    You are at latitude <%= @lat %> and longitude <%= @long %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Weather and Forecast</h5>
    <p class="card-text">
    	The current weather is <%= @current_weather %>. 
    	<br>The forecast is <%= @forecast_summary %>
  </div>
  <div class="card-footer text-muted">
    <%= @time_now %>
  </div>


