 -->


<br>
<h4>Here are the <%=@tweets.length%> tweets from your area</h4><br>
<div class="row">
	<% @tweets.each do|tweet|%>
	 <div class="col-sm-4">
  	<div class="card" style="width: 18rem;">
		  <div class="card-body">
		    <blockquote class="blockquote mb-0">
		      <p><%=tweet.text%>
				<% tweet.urls.each do |url|%>
					<a href=<%=url.url%> class="btn btn-primary">click here</a>
				<%end%>
		      <footer class="blockquote-footer"><%=tweet.user.screen_name%> 
		      	<!-- <cite title="Source Title">Source Title</cite> -->
		      	</footer>

		    </blockquote>
		  </div>
		  		      	<div class="card-footer text-muted">
	    			<%=tweet.created_at%>
		  		</div>
		</div>
	</div>
	
	<%end%>

</div>

<br>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Inspirational quote of the day</h5>
    <p class="card-text"><%= @quote %> </p>
    </p>
  </div>
  
</div>
